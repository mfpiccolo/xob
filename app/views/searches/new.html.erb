<div class="droppable" id="whole-page">
  <div id="header">
    <h1 id="logo">Scrolling Clouds</h1>
    <ul id="menu">
      <li><a id="home-link" href="#box1" class="link">Home</a></li>
      <li><a href="#box2" class="link results">Box 2</a></li>
      <li><a href="#box3" class="link results">Box 3</a></li>
      <li><a href="#box4" class="link results">Box 4</a></li>
    </ul>
  </div>

  <div class='ui-draggable terms'><input class="expandable" id='search_terms' name='search[terms]' placeholder='Terms' size='10' type='text'></div>

  <div class='ui-draggable domain'><input class="expandable" name='search[domain]' placeholder='Domain' size='10' type='text'></div>

  <div class='ui-draggable image'><input class="expandable" name='search[image]' Value='image' size='10' type='text' READONLY></div>

  <div class="ui-draggable file_type"><select class="expandable" id="search_file_type" name="search[file_type]">
    <option value="" disabled selected>File Type</option>
    <option value="pdf">pdf</option>
    <option value="doc">doc</option>
    <option value="xls">xls</option>
    <option value="txt">txt</option>
    <option value="rtf">rtf</option>
  </select></div>

  <div class='ui-draggable must_have'><input class="expandable" name='search[must_have]' placeholder='With This or That'  size='10' type='text'></div>

  <div class='ui-draggable excluded_terms'><input class="expandable" name='search[excluded_terms]' placeholder="Shouldnt Have"  size='10' type='text'></div>

  <div class='ui-draggable exact_terms'><input class="expandable" name='search[exact_terms]' placeholder="Exact"  size='10' type='text'></div>

  <div id="wrapper">

    <ul id="mask">
      <li id="box1" class="box">
        <a name="box1"></a>
        <div class="content"><div class="inner droppable" id="box"><p>Home Box</p></div></div>
      </li>
      <li id="box2" class="box">
        <a name="box2"></a>
        <div class="content">
          <div class="inner">
          Box 2
          </div>
        </div>
      </li>
      <li id="box3" class="box">
        <a name="box3"></a>
        <div class="content"><div class="inner">Box 3</div></div>
      </li>
      <li id="box4" class="box">
        <a name="box4"></a>
        <div class="content"><div class="inner">Box 4</div></div>
      </li>
    </ul>
  </div>

    <div id="cloud1" class="clouds">
    <div id="clouds-small"></div>
  </div>
  <div id="cloud2" class="clouds">
    <div id="clouds-big"></div>
  </div>

  <%= form_for @search, remote: true do |f| %>


    <%= f.submit %>

  <% end %>

</div>
